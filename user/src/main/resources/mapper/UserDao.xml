<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.edu.scnu.user.dao.ext.UserDao" >
  <resultMap id="BaseResultMap" type="com.edu.scnu.user.bean.User" >
    <id column="id" property="id" jdbcType="VARCHAR" />
    <result column="bz_id" property="bzId" jdbcType="VARCHAR" />
    <result column="username" property="username" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="nickname" property="nickname" jdbcType="VARCHAR" />
    <result column="avatar" property="avatar" jdbcType="VARCHAR" />
    <result column="login_ip" property="loginIp" jdbcType="VARCHAR" />
    <result column="login_time" property="loginTime" jdbcType="TIMESTAMP" />
    <result column="is_lock" property="isLock" jdbcType="BIT" />
    <result column="is_del" property="isDel" jdbcType="BIT" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
  </resultMap>
  
  <insert id="saveOrUpdate" parameterType="com.edu.scnu.user.bean.User" >
    INSERT INTO t_user (id, bz_id, username, 
      password, nickname, avatar, 
      login_ip, login_time, is_lock)
    VALUES
		(#{id,jdbcType=VARCHAR}, #{bzId,jdbcType=VARCHAR}, #{username,jdbcType=VARCHAR}, 
      	#{password,jdbcType=VARCHAR}, #{nickname,jdbcType=VARCHAR}, #{avatar,jdbcType=VARCHAR}, 
      	#{loginIp,jdbcType=VARCHAR}, #{loginTime,jdbcType=TIMESTAMP}, #{isLock,jdbcType=BIT})
    ON DUPLICATE KEY UPDATE
     <trim suffixOverrides=",">
	      <if test="username != null" >
	        username = #{username,jdbcType=VARCHAR},
	      </if>
	      <if test="password != null" >
	        password = #{password,jdbcType=VARCHAR},
	      </if>
	      <if test="nickname != null" >
	        nickname = #{nickname,jdbcType=VARCHAR},
	      </if>
	      <if test="avatar != null" >
	        avatar = #{avatar,jdbcType=VARCHAR},
	      </if>
	      <if test="loginIp != null" >
	        login_ip = #{loginIp,jdbcType=VARCHAR},
	      </if>
	      <if test="loginTime != null" >
	        login_time = #{loginTime,jdbcType=TIMESTAMP},
	      </if>
	      <if test="isLock != null" >
	        is_lock = #{isLock,jdbcType=BIT},
	      </if>
     </trim>
  </insert>
  
</mapper>
  